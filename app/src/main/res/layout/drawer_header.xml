<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_head_bg"
    android:paddingTop="@dimen/size_small">

    <ImageView
        android:layout_width="@dimen/size_medium"
        android:layout_height="@dimen/size_medium"
        android:id="@+id/imageView" android:src="@drawable/my_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/spacing_normal"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/spacing_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment.profile.title"
            android:textColor="@color/white"
            android:fontFamily="@string/ff_medium"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile.email"
            android:textColor="@color/white"
            android:fontFamily="@string/ff_regular"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>
</RelativeLayout>